#include <dt-bindings/zmk/matrix_transform.h>

/ {
    choosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    }
/ {
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <4>; 
        rows = <4>; 
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3)
            RC(3,0) RC(3,1) RC(3,2) 
        >;
    };
};

 kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        col-gpios
            = <&gpio0 P0.28 GPIO_ACTIVE_HIGH>
            , <&gpio0 P0.29 GPIO_ACTIVE_HIGH>
            , <&gpio0 P0.30 GPIO_ACTIVE_HIGH>
            , <&gpio0 P0.31 GPIO_ACTIVE_HIGH>
            ;

        row-gpios
            = <&gpio0 P0.07 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 P0.09 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 P0.12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 P0.23 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};